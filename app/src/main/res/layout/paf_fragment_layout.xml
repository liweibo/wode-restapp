<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.WatchFragment">
    <android.support.design.widget.TabLayout
        android:id="@+id/watch_tl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        app:tabIndicatorColor="@color/themeColor"
        app:tabSelectedTextColor="@color/themeColor"
        app:tabTextColor="#7D7D7D"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/myViewPager"
        android:background="@color/md_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/watch_tl"></android.support.v4.view.ViewPager>
</RelativeLayout>
